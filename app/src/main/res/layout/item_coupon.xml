<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/coupon_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#ff0c05"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#ff0c05"
                        android:textSize="30dp"
                        android:id="@+id/ivPrice"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="满300使用"
                    android:textSize="12dp"
                    android:textColor="#666666"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ivTips"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingTop="35dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/coupon_on"
                        android:text="满减券"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:id="@+id/ivType"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="全场满300减10"
                        android:textColor="@color/comm_color"
                        android:textSize="16dp"
                        android:id="@+id/ivTitle"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018.04.11到期"
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:id="@+id/ivTimes"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(仅剩1天)"
                        android:textSize="12dp"
                        android:textColor="#ff5700"
                        android:id="@+id/ivEndTime"
                        />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="立即使用"
                        android:textColor="#ff0c05"
                        android:textSize="11dp"
                        android:background="@drawable/button_bluex6"
                        android:layout_marginLeft="15dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_below="@id/p1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅限购买工厂店商品"
                android:id=""
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_coupon"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                />


        </LinearLayout-->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/coupon_r"
            android:layout_alignRight="@id/p1"
            android:id="@+id/ivStatus"
            />



    </RelativeLayout>

</LinearLayout>