<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.GelingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/left" />

        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入格灵APP界面"
            android:layout_below="@+id/top"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/comm_color"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/llist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_1"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/app_2"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llist"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_3"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_4"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llist2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llist1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_5"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_marginLeft="10dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_6"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llist3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llist2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_7"
                />

            <ImageView
                android:layout_width="110dp"
                android:layout_marginLeft="10dp"
                android:layout_height="110dp"
                android:src="@mipmap/app_8"
                />
        </LinearLayout>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>